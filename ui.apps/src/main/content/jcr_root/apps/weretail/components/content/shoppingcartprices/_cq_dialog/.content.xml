<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Title"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <showSubTotal
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Controls whether the cart sub-total should be displayed."
                        name="./showSubTotal"
                        text="Display the cart sub-total."
                        value="true"/>
                    <showShippingTotal
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Controls whether the shipping price total should be displayed."
                        name="./showShippingTotal"
                        text="Display the cart shipping price total."
                        value="true"/>
                    <showTaxTotal
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Controls whether the tax sub-total should be displayed."
                        name="./showTaxTotal"
                        text="Display the cart tax sub-total."
                        value="true"/>
                    <showTotal
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Controls whether the cart total should be displayed."
                        name="./showTotal"
                        text="Display the cart total."
                        value="true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
