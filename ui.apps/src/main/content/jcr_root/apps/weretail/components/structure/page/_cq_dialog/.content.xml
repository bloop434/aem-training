<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          extraClientlibs="[cq.common.wcm,core.wcm.components.page.v2.editor,cq.wcm.msm.properties]"
          helpPath="https://www.adobe.com/go/aem_cmp_page_v2"
          trackingFeature="core-components:page:v2"
          mode="edit"
          jcr:primaryType="nt:unstructured"
          jcr:title="JSON"
          sling:resourceType="cq/gui/components/authoring/dialog" >
    <content
            jcr:primaryType="nt:unstructured"
            granite:class="cq-dialog-content-page"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">



            <tabs
                    jcr:primaryType="nt:unstructured"
                    granite:class="cq-siteadmin-admin-properties-tab"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    size="L">
                <include-clientlibs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                        js="[cq:include]"
                />
                <items jcr:primaryType="nt:unstructured">
                    <customtab
                            jcr:title="JSON"
                            jcr:primaryType="nt:unstructured"
                            cq:showOnCreate="{Boolean}true"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <brand
                                            jcr:title="Brand"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                            fieldLabel="Brand"
                                            jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <name
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Name"
                                                jcr:primaryType="nt:unstructured"/>
                                            <model
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Model"
                                                    jcr:primaryType="nt:unstructured"/>
                                            <color
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Color"
                                                    jcr:primaryType="nt:unstructured"/>
                                            <description
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Description"
                                                jcr:primaryType="nt:unstructured"/>
                                        </items>
                                        </brand>
                                            <offer
                                                    jcr:title="Offer"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                    jcr:primaryType="nt:unstructured">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <price
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                                fieldLabel="Price"
                                                                min="0"
                                                                jcr:primaryType="nt:unstructured"/>
                                                        <currency
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Currency"
                                                                jcr:primaryType="nt:unstructured">
                                                                 <items jcr:primaryType="nt:unstructured">
                                                                     <euro
                                                                             text="EUR"
                                                                             jcr:primaryType="nt:unstructured"/>

                                                                     <dollar
                                                                             text="USD"
                                                                             jcr:primaryType="nt:unstructured"/>

                                                                     <pound
                                                                             text="GBS"
                                                                             jcr:primaryType="nt:unstructured"/>
                                                                 </items>
                                                        </currency>

                                                    </items>
                                            </offer>

                                            <review
                                                    jcr:title="Review"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                                    jcr:primaryType="nt:unstructured">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <reviewCount
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                            fieldLabel="Review Count"
                                                            min="0"
                                                            jcr:primaryType="nt:unstructured"/>
                                                    <ratingValue
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                            fieldLabel="Rating value"
                                                            min="0"
                                                            max="5"
                                                            jcr:primaryType="nt:unstructured"/>


                                                </items>
                                            </review>
                                </items>
                           </column>
                        </items>
                    </customtab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>

